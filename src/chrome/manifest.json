{
	"name": "Peerio",
	"short_name": "Peerio",
	"description": "Secure message and file sharing for everyone. Work anywhere with our cloud. Keep your data safe with end-to-end encryption.",
	"version": "1.0.0",
	"author": "Technologies Peerio Inc.",
	"minimum_chrome_version": "39",
	"manifest_version": 2,
	"offline_enabled": true,
	"icons": {
		"16": "img/icon16.png",
		"32": "img/icon32.png",
		"48": "img/icon48.png",
		"48": "img/icon64.png",
		"128": "img/icon128.png",
		"256": "img/icon256.png",
		"512": "img/icon512.png",
		"1024": "img/icon1024.png"
	},
	"app": {
		"background": {
			"scripts": [ "background.js" ]
		}
	},
	"permissions": [
		{"fileSystem": ["write"]},
		"notifications",
		"storage",
		"fileBrowserHandler",
		"https://peerio.blob.core.windows.net/*"
	]
}
